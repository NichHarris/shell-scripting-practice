#1/bin/bash

# This script will create new user accounts

# Executed with superuser privileges
HOST_ID=$(id -un)
if [[ "${UID}" -ne 0 ]]
then
  echo 'You are not running with superuser privileges. Exiting.'
  exit 1
fi

# Enter the username
read -p 'Enter the username: ' USER_NAME

# Enter the name
read -p 'Enter the name of the account holder: ' COMMEN
# Create new user
useradd -c "${COMMENT}" -m ${USER_NAME}

# Enter the password
sudo passwd ${USER_NAME}

# Display username, password and  host info
echo "Account username:\n${USER_NAME}\nPassword:\n${PASSWORD}\nHost:\n${HOST_ID}"

